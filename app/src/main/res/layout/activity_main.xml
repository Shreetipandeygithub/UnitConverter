<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6BABA"
    tools:context=".MainActivity">

    <TextView
        android:background="#A36161"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Converter"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="11dp"
        android:textSize="30sp"
        android:textColor="#040101"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a number"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@color/purple_200"
        android:textColor="#090505"
        android:id="@+id/edtNumber"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:hint="Enter current Unit(l,m,g,kg,..so on)"
        android:inputType="text"
        android:textSize="23sp"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#120909"
        android:id="@+id/edtCurrentUnit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a Unit in which it has converted"
        android:background="@color/purple_200"
        android:inputType="text"
        android:textSize="24sp"
        android:layout_marginTop="11dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#070303"
        android:id="@+id/edtTobeConverted"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:id="@+id/btnConvert"/>

    <TextView
        android:layout_marginTop="30dp"
        android:text="Result"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"/>

</LinearLayout>